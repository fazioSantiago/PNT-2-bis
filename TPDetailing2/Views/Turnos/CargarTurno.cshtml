@model Turno

@{
    ViewData["Title"] = "CargarTurno";
}

<h1>Confirmar Turno</h1>

<h4>Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CargarTurno">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="TurnoId" />

            <input type="hidden" asp-for="Realizado" value=true />
            
            <div class="form-group">
                <label asp-for=Fecha class="control-label"></label>
                @*<input asp-for=Fecha type="datetime" value=@Model.Fecha class="form-control" disabled />*@
                <input asp-for="Fecha" class="form-control" readonly/>
            </div>
            <div class="form-group">
                @{
                    var userId = (int)TempData["UserID"];
                }
                <label asp-for=ClienteId class="control-label"></label>
                <input asp-for=ClienteId value=@userId class="form-control" readonly/>
                
            </div>
            <div class="form-group">
                @{
                 var servicioId = (int)TempData["ServicioId2"];
                }
                <label asp-for=ServicioId class="control-label"></label>
                <input asp-for=ServicioId value=@servicioId class="form-control" readonly/>
            </div>
            @*<div class="form-group">
                <label asp-for="EmpleadoId" class="control-label"></label>
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
