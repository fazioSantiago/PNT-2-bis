@model Turno

@{
    ViewData["Title"] = "CargarTurno";

    var nom = (string)TempData["ServicioNom1"];
    var userId = (int)TempData["UserID"];
    var servicioId = (int)TempData["ServicioId1"];
    var servicioPrecio = (int)TempData["ServicioPre1"];
}


<h1>Confirmar Turno</h1>

<h4>Turno</h4>


<hr />
<div class="row">
    <div class="col-md-4">

        <div class="form-group">
            <label class="control-label">Servicio</label>
            <input type="text" value=@nom class="form-control" disabled />
        </div>

        <div class="form-group">
            <label class="control-label">Importe</label>
            <input type="text" value=@servicioPrecio class="form-control" disabled />
        </div>

        <form asp-action="CargarTurno">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="TurnoId" />
            <input type="hidden" asp-for="Disponible" value=false />
            
            <div class="form-group">
                <label asp-for=ServicioId class="control-label"></label>
                <input asp-for=ServicioId value=@servicioId class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for=Fecha class="control-label"></label>
                <input asp-for="Fecha" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label asp-for=ClienteId class="control-label"></label>
                <input asp-for=ClienteId value=@userId class="form-control" readonly/>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Servicios" asp-action="Index">Inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
