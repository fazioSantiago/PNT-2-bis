@model IEnumerable<TPDetailing2.Models.Turno>

@{
    ViewData["Title"] = "Index";
}

<h1>Turnos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Realizado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Realizado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cliente.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TurnoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TurnoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TurnoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
