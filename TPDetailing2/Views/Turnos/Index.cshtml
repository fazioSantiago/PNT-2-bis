@model IEnumerable<TPDetailing2.Models.Turno>

@{
    ViewData["Title"] = "Index";
}

<h1>Turnos</h1>

@if (User.IsInRole("ADMIN"))
{
 <p>
    <a asp-action="Create">Create New</a>
</p>  
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            @if (User.IsInRole("ADMIN"))
            {
            <th>
                @Html.DisplayNameFor(model => model.cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicio)
            </th>
            }
     
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
                <td>
            @if (!item.Disponible)
            {
                <a class="btn btn-primary" asp-action="CargarTurno" asp-route-id="@item.TurnoId">
                    Reservar
                </a>
            } else {
                <a class="btn btn-danger">
                    No Disponible
                </a>
            }
            </td>
         
        @if (User.IsInRole("ADMIN"))
        {
            <td>
                @Html.DisplayFor(modelItem => item.cliente.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servicio.Nombre)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.TurnoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TurnoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TurnoId">Delete</a>
            </td>
        }
       
        </tr>
}
    </tbody>
</table>
